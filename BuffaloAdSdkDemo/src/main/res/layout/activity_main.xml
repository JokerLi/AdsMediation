<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_load"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_blue_request"
                    android:text="并发请求"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_load_seq"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_blue_request"
                    android:text="顺序请求"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"/>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            <Button
                android:layout_marginTop="6dp"
                android:id="@+id/getad"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_blue_request"
                android:text="拿取广告不要求图片"
                android:layout_weight="1"/>


            <Button
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:id="@+id/getad_image"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_blue_request"
                android:text="拿取广告要求图片"
                android:layout_weight="1"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="超级抢量"
                    android:id="@+id/checkbox_priority"
                    android:layout_weight="1"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_picks_num"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PosInfo"
                android:id="@+id/ad_pos_infomation"
                android:singleLine="false"/>
        </LinearLayout>

    <FrameLayout
        android:id="@+id/big_ad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ff0000"
        android:padding="2dp" >
    </FrameLayout>

</LinearLayout>