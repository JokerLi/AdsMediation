<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_load"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_request"
                android:text="并发请求" />

            <Button
                android:id="@+id/btn_load_seq"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_request"
                android:text="顺序请求" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#afafaf">

            <CheckBox
                android:id="@+id/report_extra"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="上报extra" />

            <EditText
                android:id="@+id/edit_text_key"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/edit_text_value"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/getad"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="@drawable/btn_blue_request"
                android:text="拿取广告" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/big_ad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ff0000"
        android:padding="2dp"></FrameLayout>

</LinearLayout>